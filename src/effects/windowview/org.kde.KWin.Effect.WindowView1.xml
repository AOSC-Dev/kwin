<node name="/org/kde/KWin/Effect/WindowView1">
    <!--
        org.kde.KWin.Effect.WindowView1:
        @short_description: Application window selector

        This interface provides a way to select windows interactively.
    -->
    <interface name="org.kde.KWin.Effect.WindowView1">
        <!--
            activate:
            @short_description: Activate window view  effect for a given list of windows
            @windows: The list with window ids.
        -->
        <method name="activate">
            <arg name="handles" type="as" direction="in" />
        </method>
        <!--
            activateAllDesktops:
            @short_description: Activate window view effect for all windows on all desktops
        -->
        <method name="activateAllDesktops"/>
        <!--
            activateCurrentDesktop:
            @short_description: Activate window view effect for all windows on the current desktop
        -->
        <method name="activateCurrentDesktop"/>
        <!--
            activateWindowClass:
            @short_description: Activate window view effect for windows of the current application on all desktops
        -->
        <method name="activateWindowClassAllDesktops"/>
        <!--
            activateWindowClassCurrentDesktop:
            @short_description: Activate window view effect for windows of the current application on the current desktop
        -->
        <method name="activateWindowClassCurrentDesktop"/>
    </interface>
</node>
